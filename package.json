{
  "name": "react-refactor-to-file",
  "publisher": "jpleon",
  "repository": {
    "type": "git",
    "url": "https://github.com/coffeecode-co/vsext-react-refactor-to-file"
  },
  "license": "MIT",
  "icon": "./public/icon.png",
  "displayName": "react-refactor-to-file",
  "description": "Easily extract React components or JSX/TSX into separate files with automatic imports and optional test generation.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-refactor-to-file.extractToFile",
        "title": "React: Extract to Component File"
      },
      {
        "command": "react-refactor-to-file.extractToFileCustomPath",
        "title": "React: Extract to Component File (Custom Path)"
      },
      {
        "command": "react-refactor-to-file.help",
        "title": "React: Show Extension Help"
      }
    ],
    "configuration": {
      "title": "React Refactor to File",
      "properties": {
        "react-refactor-to-file.test.generate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically generate a test file for the extracted component."
        },
        "react-refactor-to-file.test.strategy": {
          "type": "string",
          "enum": [
            "relative",
            "interactive"
          ],
          "default": "relative",
          "description": "Strategy for test file location: 'relative' to component or 'interactive' selection."
        },
        "react-refactor-to-file.test.relativePath": {
          "type": "string",
          "default": "__tests__",
          "description": "Relative path for test files when strategy is 'relative'. Use '.' for same directory."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile": "pnpm run build",
    "vsix": "npx @vscode/vsce package",
    "test": "vscode-test",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
